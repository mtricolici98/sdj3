

import java.io.Serializable;

public class Pallet implements Serializable 
{
	private String id;
	private String type;
	private final double maxWeight = 1000.0;
	private double weight;
	private ArrayList<Car> cars;
	
	public Pallet(String type)
	{
		this.id = DismantlingFacilityUtilities.generateId();
		this.type = type;
		this.weight = 0;
		this.cars = new ArrayList<Car>();
	}
	
	public String getType()
	{
		return type;
	}
	
	public double getMaxWeight()
	{
		return weight;
	}
	
	public double getWeight()
	{
		return weight;
	}
	
	public CarCollection getParts() 
	{
		return cars;
	}
	
	public void addPartFromCar(Car car, double weight)
	{
		if(!cars.getCarCollection().contains(car))
		{
			cars.add(car);
		}
		this.weight += weight;
	}
	
	public boolean isReadyForPackaging()
	{
		return weight >= maxWeight - 50.0;
	}

}
