package common.model;

import java.sql.Date;
import java.util.Calendar;
import java.util.GregorianCalendar;

public class Car 
{
	private String carId;
	private double weight;
	private String dumpId;
	private Date dateArrived;
	private boolean isDisassembled;
	
	public Car(double weight, Date dateArrived)
	{
		carId = DismantlingFacilityUtilities.generateId();
		this.weight = weight;
		this.dumpId = DismantlingFacilityUtilities.generateId();
		this.dateArrived = dateArrived;
		this.isDisassembled = false;
	}
	
	public Car(double weight)
	{
		carId = DismantlingFacilityUtilities.generateId();
		this.dumpId = DismantlingFacilityUtilities.generateId();
		this.isDisassembled = false;
		this.weight = weight;
		
		Calendar calendar = GregorianCalendar.getInstance();
		this.dateArrived = new Date(calendar.YEAR, calendar.MONTH, calendar.DAY_OF_MONTH);
	}
	
	public String getCarId() 
	{
		return carId;
	}
	
	public void setCarId(String carId)
	{
		this.carId = carId;
	}
	
	public double getWeight(double weight)
	{
		return weight;
	}
	
	public void setWeight(double weight) {
		this.weight = weight;
	}
	
	public String getDumpId()
	{
		return dumpId;
	}
	
	public void setDumpId(String dumpId)
	{
		this.dumpId = dumpId;
	}
	
	public Date getDateArrived() {
		return dateArrived;
	}
	
	public void setDateArrived(Date dateArrived)
	{
		this.dateArrived = dateArrived;
	}
	
	public boolean isDisassembled()
	{
		return isDisassembled;
	}
	
	public void setDisassembled(boolean isDisassembled)
	{
		this.isDisassembled = isDisassembled;
	}
	
	public String toString()
	{
		return "Car[" + carId + ", " + weight + "," + dumpId + "," + dateArrived + "]";
	}
	
	//HashCode, equals, isCarSplit

}
